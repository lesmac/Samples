<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 <requestFocus />

    <TextView
        android:id="@+id/noreadings"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/noreadings"
        android:layout_alignBottom="@+id/noreadings"
        android:layout_alignParentRight="true"
        android:text="@string/noreadings"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/duration24"
        android:text="@string/duration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/noreadings24"
        android:layout_width="84dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="48"
        android:inputType="number" />

    <EditText
        android:id="@+id/duration24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/interval24"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="24"
        android:inputType="number" />

    <TextView
        android:id="@+id/interval"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/noreadings24"
        android:text="@string/interval"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/interval24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/interval"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/interval"
        android:ems="10"
        android:hint="30"
        android:inputType="number" />

    <Button
        android:id="@+id/begincuffstudy24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="71dp"
        android:layout_marginLeft="33dp"
        android:text="@string/OK" />

    <Button
        android:id="@+id/clear24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/begincuffstudy24"
        android:layout_alignLeft="@+id/interval"
        android:text="@string/clear" />

</RelativeLayout>